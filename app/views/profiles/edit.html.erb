<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
    <h1><%= t('.title') %></h1>
    <%= form_with(model: @user, url: profile_path, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*', onchange: 'previewImage()' %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <div class="mb-3">
        <%= image_tag current_user.avatar.url, class: 'preview rounded-circle mr15', size: '70x70' %>
      </div>
    
      <div class="actions">
        <%= f.submit t('defaults.update'), class: 'btn btn-primary' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
