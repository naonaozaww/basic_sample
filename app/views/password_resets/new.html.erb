<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with url: password_resets_path, local: true, method: :post do |form| %>
        <div class="form-group">
          <%= form.label :email, User.human_attribute_name(:email) %>
          <%= form.text_field :email, class: 'form-control mb-3' %>
          <%= form.submit t('defaults.send'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
