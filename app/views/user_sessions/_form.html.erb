<%= form_with url: login_path, local: true, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :email, User.human_attribute_name(:email) %>
    <%= f.text_field :email, value: params[:email], class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password, User.human_attribute_name(:password) %>
    <%= f.password_field :password, value: params[:password], class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit t('defaults.login'), class:'btn btn-primary' %>
  </div>
<% end %>
